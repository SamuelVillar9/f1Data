{% extends 'base.html.twig' %}

{% block title %}Circuitos{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Circuitos</h1>

        <div class="row mt-4">
            {% for circuit in circuits %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if circuit.urlCircuitPhoto %}
                            <img src="/uploads/circuits/{{ circuit.urlCircuitPhoto }}" class="card-img-top" alt="{{ circuit.circuitName }}" style="object-fit: cover; height: 200px; object-position: top;">
                        {% else %}
                            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Logo no disponible" style="object-fit: cover; height: 200px; object-position: top;">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ circuit.circuitName }}</h5>
                            <p class="card-text">
                                <strong>País:</strong>
                                {{ circuit.country }}
                            </p>
                            <p class="card-text">
                                <strong>Localización:</strong>
                                {{ circuit.location}}
                            </p>
                            <p class="card-text">
                                <strong>Longitud en KM:</strong>
                                {{ circuit.lengthKm}}
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    No hay circuitos dados de alta.
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

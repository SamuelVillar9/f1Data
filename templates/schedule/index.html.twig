{% extends 'base.html.twig' %}

{% block title %}Calendarios{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Calendarios</h1>

        <!-- Formulario para seleccionar temporada -->
        <form method="get" action="{{ path('schedule') }}" class="mb-4">
            <label for="season" class="form-label">Selecciona la temporada:</label>
            <select name="season" id="season" class="form-select">
                {% for season in seasons %}
                    <option value="{{ season.id }}" {% if season.id == selectedSeason or (not selectedSeason and season.seasonName == '2025') %} selected {% endif %}>
                        {{ season.seasonName }}
                    </option>
                {% endfor %}
            </select>
            <button type="submit" class="btn btn-primary mt-3">Filtrar</button>
        </form>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for schedule in schedules %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-header text-center bg-light">
                            <h5 class="card-title">{{ schedule.scheduleName }}</h5>
                            <p class="card-subtitle mb-2 text-muted">
                                Temporada:
                                {{ schedule.seasonId ? schedule.seasonId.seasonName : 'Temporada no disponible' }}
                            </p>
                        </div>

                        <div class="card-body">
                            <h6 class="card-title">Grandes Premios:</h6>
                            {% if schedule.meetings|length > 0 %}
                                <ul class="list-unstyled">
                                    {% for meeting in schedule.meetings %}
                                        <li class="mb-3">
                                            <strong>GP {{ meeting.roundNumber }}:</strong> {{ meeting.meetingName }}<br>
                                            <em>{{ meeting.dates }}</em><br>
                                            <span>
                                                <strong>Circuito:</strong>
                                                {{ meeting.circuitId.circuitName }}
                                            </span><br>

                                            <!-- Mostrar las sesiones de cada meeting -->
                                            {% if meeting.sessions|length > 0 %}
                                                <h6 class="mt-3">Sesiones:</h6>
                                                <ul class="list-unstyled">
                                                    {% for session in meeting.sessions %}
                                                        <li>{{ session.sessionName }} - {{ session.date|date('d/m/Y H:i') }}</li>
                                                    {% endfor %}
                                                </ul>
                                            {% else %}
                                                <p>No hay sesiones asociadas a este GP.</p>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p>No hay grandes premios asociados a este calendario.</p>
                            {% endif %}
                        </div>

                        <div class="card-footer text-center"></div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center" role="alert">
                        No hay calendarios disponibles para la temporada seleccionada.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
